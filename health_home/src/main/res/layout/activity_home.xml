<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".activity.HomeActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/vp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"></android.support.v4.view.ViewPager>
    <RadioGroup
        android:background="@drawable/the_bottom_bar"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:id="@+id/rg"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <RadioButton
            android:checked="true"
            android:id="@+id/rb_shou"
            android:button="@null"
            android:background="@drawable/shou_selector"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
        <RadioButton
            android:id="@+id/rb_quan"
            android:button="@null"
            android:background="@drawable/quan_selector"
            android:layout_width="48dp"
            android:layout_height="48dp" />
        <RadioButton
            android:id="@+id/rb_movie"
            android:button="@null"
            android:background="@drawable/movie_selector"
            android:layout_width="30dp"
            android:layout_height="30dp"/>

    </RadioGroup>
</LinearLayout>