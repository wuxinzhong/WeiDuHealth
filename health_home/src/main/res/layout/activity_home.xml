<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".activity.HomeActivity">

    <RelativeLayout
        android:background="#f2f2f2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/vp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="60dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/the_bottom_bar"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/home_lin"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginRight="75dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/rb_shou_wei"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="10dp"
                    android:src="@drawable/common_tab_home_n"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/rb_shou_xuan"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="10dp"
                    android:src="@drawable/common_tab_home_s"
                    android:visibility="visible" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/movie_lin"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="75dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/rb_movie_wei"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="10dp"
                    android:src="@drawable/common_tab_video_n" />

                <ImageView
                    android:id="@+id/rb_movie_xuan"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="10dp"
                    android:src="@drawable/common_tab_video_s"
                    android:visibility="gone" />

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/sick_lin"
            android:layout_width="53dp"
            android:layout_height="53dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="32dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/sick_circle_img"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/common_tab_circle_n" />

            <ImageView
                android:id="@+id/comments_img"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/common_tab_circle_s"
                android:visibility="gone" />

        </LinearLayout>


    </RelativeLayout>


</LinearLayout>